<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginViewController">
	<children>
		<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="122.0" prefWidth="600.0" text="LOGIN" textAlignment="CENTER">
			<font>
				<Font size="40.0" />
			</font>
		</Label>
		<HBox alignment="CENTER" prefHeight="77.0" prefWidth="600.0">
			<children>
				<Label prefHeight="55.0" prefWidth="62.0" text="Username:" />
				<VBox alignment="CENTER">
					<children>
						<TextField prefHeight="25.0" prefWidth="111.0" fx:id="inputField" />
					</children>
				</VBox>
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="51.0" prefWidth="600.0">
			<children>
				<Label prefHeight="51.0" prefWidth="57.0" text="Password:" />
				<VBox alignment="CENTER" prefHeight="14.0" prefWidth="111.0">
					<children>
						<TextField prefHeight="0.0" prefWidth="111.0" fx:id="password" />
					</children>
				</VBox>
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
			<children>
				<Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="47.0" prefWidth="88.0" text="Login" textAlignment="CENTER" onAction="#loginButtonPressed">
					<font>
						<Font size="17.0" />
					</font>
					<HBox.margin>
						<Insets right="20.0" />
					</HBox.margin>
				</Button>
				<Button mnemonicParsing="false" prefHeight="46.0" prefWidth="98.0" text="Cancel" onAction="#cancelButtonPressed">
					<font>
						<Font size="17.0" />
					</font>
				</Button>
			</children>
		</HBox>
	</children>
</VBox>
