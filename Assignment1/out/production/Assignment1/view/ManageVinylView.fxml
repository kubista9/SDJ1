                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <children>
                <Label fx:id="errorLabel" alignment="CENTER" prefHeight="27.0" prefWidth="506.0" text="Error" textFill="RED">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="20.0" layoutY="79.0" spacing="30.0">
            <children>
                <Button fx:id="submitButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#submitButton" text="Submit">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#cancelButton" text="Cancel">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
