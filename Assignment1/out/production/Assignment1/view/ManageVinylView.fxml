<VBox prefHeight="239.0" prefWidth="532.0" userData="Manage Exercise" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ManageVinylViewController">
    <children>
        <HBox alignment="CENTER" layoutX="20.0" layoutY="79.0" spacing="10.0">
            <children>
                <Label fx:id="headerLabel" alignment="CENTER" prefHeight="35.0" prefWidth="519.0" text="Borrow Vinyl">
                    <font>
                        <Font size="24.0" />
                    </font>
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="39.0" prefWidth="514.0" spacing="10.0">
            <children>
                <Label text="Title">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="titleField" prefHeight="39.0" prefWidth="151.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <Label layoutX="10.0" layoutY="16.0" text="Name">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" layoutX="80.0" layoutY="10.0" prefHeight="39.0" prefWidth="164.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
